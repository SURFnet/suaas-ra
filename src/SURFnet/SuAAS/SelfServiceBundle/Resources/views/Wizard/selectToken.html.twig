{% extends '::base.html.twig' %}

{% block title %}SuAAS - Self Service - Select Token{% endblock title %}

{% block content %}
    <div class="row-fluid">
        <div class="span6 offset3">
            <h1>Hello!</h1>
            <div class="alert alert-success">
                <strong>Woohoo!</strong> Je bent succesvol ingelogd.
            </div>
            <h3>Deze gegevens zijn van je bekend:</h3>
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <td><strong>Eigen Organisatie:</strong></td>
                        <td>{{ user.organisation }}</td>
                    </tr>
                    <tr>
                        <td><strong>Weergave Naam:</strong></td>
                        <td>{{ user.displayName }}</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
