{% extends "SURFnetSuAASRABundle:RA:baseNoMenu.html.twig" %}

{% block title %}{{ parent() }} - RA Overview{% endblock title %}

{% block page_content %}
<div class="alert alert-info alert-block">
    <strong>Testing Purpose Only</strong>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Display Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>
            {% if user.isRa %}
                <a class="btn btn-warning btn-small" href="{{ path("management_ra_revoke", {"user":user.id}) }}" title="Revoke RA">Revoke RA</a>
            {% else %}
                <a class="btn btn-primary btn-small" href="{{ path("management_ra_create", {"user":user.id}) }}" title="Promote to RA">Promote to RA</a>
            {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
